    private void BotonAdoptarActionPerformed(java.awt.event.ActionEvent evt) {                                             
        String nombreMascota = txtNombreMascota.getText();
    String razaMascota = txtNombreRaza.getText();
    String tamañoMascota = txtTamañoMascota.getText();

    if (txtNombreAdoptante.getText().isEmpty() || txtCelular.getText().isEmpty() || txtCorreo.getText().isEmpty() || txtEdad.getText().isEmpty() || txtObservaciones.getText().isEmpty()) {
        JOptionPane.showMessageDialog(this, "Por favor, llene todos los campos antes de presionar el botón de adoptar.");
    } else {
        if ((nombreMascota.equalsIgnoreCase("Casper") && razaMascota.equalsIgnoreCase("Mediano") && tamañoMascota.equalsIgnoreCase("Boxer")) ||
            (nombreMascota.equalsIgnoreCase("Cristopher") && razaMascota.equalsIgnoreCase("Mediano") && tamañoMascota.equalsIgnoreCase("Mestizo")) ||
            (nombreMascota.equalsIgnoreCase("Tobi") && razaMascota.equalsIgnoreCase("Alto") && tamañoMascota.equalsIgnoreCase("Mestizo")) ||
            (nombreMascota.equalsIgnoreCase("Pancho") && razaMascota.equalsIgnoreCase("Pequeño") && tamañoMascota.equalsIgnoreCase("Bulldog"))||
            (nombreMascota.equalsIgnoreCase("Luki") && razaMascota.equalsIgnoreCase("Mediano") && tamañoMascota.equalsIgnoreCase("Bombay")) ||
            (nombreMascota.equalsIgnoreCase("Pimienta") && razaMascota.equalsIgnoreCase("Mediano") && tamañoMascota.equalsIgnoreCase("Persa"))){
            JOptionPane.showMessageDialog(this, "¡Gracias por tu interés en adoptar! Tu solicitud será procesada y recibirás una respuesta en un plazo de 3 días en tu correo electrónico.");
            
            txtNombreMascota.setText("");
            txtNombreRaza.setText("");
            txtTamañoMascota.setText("");
            txtNombreAdoptante.setText("");
            txtCelular.setText("");
            txtCorreo.setText("");
            txtEdad.setText("");
            txtObservaciones.setText("");
        } else {
            JOptionPane.showMessageDialog(this, "Lo sentimos, los datos ingresados de las mascota son incorrectos. Por favor, ingrese los datos correctamente.");
        }
    }
    }                                            


